ishikopath = envvar("ISHIKO_CPP");
import $(ishikopath)/http/include/Ishiko/HTTP.bkl;
import $(ishikopath)/tests/include/Ishiko/Tests.bkl;
nemupath = envvar("NEMU_CPP");
import $(nemupath)/beast-connection-engine/include/Nemu/BeastConnectionEngine.bkl;

toolsets = gnu vs2019 vs2017 vs2015 vs2013;

gnu.makefile = ../gnumake/GNUmakefile;
vs2019.solutionfile = ../vc16/NemuBeastConnectionEngineTests.sln;
vs2017.solutionfile = ../vc15/NemuBeastConnectionEngineTests.sln;
vs2015.solutionfile = ../vc14/NemuBeastConnectionEngineTests.sln;
vs2013.solutionfile = ../vc12/NemuBeastConnectionEngineTests.sln;

program NemuBeastConnectionEngineTests : NemuBeastConnectionEngine, IshikoHTTP, IshikoTests
{
    archs = x86 x86_64;

    headers
    {
        ../../src/BeastResponseBuilderTests.h
        ../../src/BeastServerTests.h
        ../../src/helpers/TestRoutes.hpp
        ../../src/helpers/TestServerObserver.hpp
    }

    sources
    {
        ../../src/BeastResponseBuilderTests.cpp
        ../../src/BeastServerTests.cpp
        ../../src/main.cpp
        ../../src/helpers/TestRoutes.cpp
        ../../src/helpers/TestServerObserver.cpp
    }
}
